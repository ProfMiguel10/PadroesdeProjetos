package padroes.criacionais.factorymethod;

interface Documento {
    void emitir();
}

class HistoricoEscolar implements Documento {
    public void emitir() {
        System.out.println("Emitindo Histórico Escolar...");
    }
}

class DeclaracaoMatricula implements Documento {
    public void emitir() {
        System.out.println("Emitindo Declaração de Matrícula...");
    }
}

class AtestadoFrequencia implements Documento {
    public void emitir() {
        System.out.println("Emitindo Atestado de Frequência...");
    }
}

abstract class GeradorDocumento {
    public abstract Documento criarDocumento();
}

class GerarHistorico extends GeradorDocumento {
    public Documento criarDocumento() { return new HistoricoEscolar(); }
}

class GerarDeclaracaoMatricula extends GeradorDocumento {
    public Documento criarDocumento() { return new DeclaracaoMatricula(); }
}

class GerarAtestadoFrequencia extends GeradorDocumento {
    public Documento criarDocumento() { return new AtestadoFrequencia(); }
}
